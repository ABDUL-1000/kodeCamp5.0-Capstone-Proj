{
  "info": {
    "name": "E-commerce API",
    "_postman_id": "ecommerce-api-collection",
    "description": "Collection for the E-commerce API endpoints with auth and role-based access control",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"fullName\": \"Admin User\", \"email\": \"admin@example.com\", \"password\": \"Password123\", \"role\": \"admin\"}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Register (customer)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"fullName\": \"Customer One\", \"email\": \"customer@example.com\", \"password\": \"Password123\", \"role\": \"customer\"}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Login (admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"admin@example.com\", \"password\": \"Password123\"}"
            },
            "url": "{{baseUrl}}/auth/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "  pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products (public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/products"
          }
        },
        {
          "name": "Create Product (admin only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"productName\": \"Sample Product\", \"cost\": 199.99, \"productImages\": [\"https://example.com/img1.jpg\"], \"description\": \"Great product\", \"stockStatus\": \"in_stock\"}"
            },
            "url": "{{baseUrl}}/products"
          }
        },
        {
          "name": "Delete Product by ID (admin only)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/:id",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "products",
                ":id"
              ]
            }
          }
        }
      ]
    }
  ]
}